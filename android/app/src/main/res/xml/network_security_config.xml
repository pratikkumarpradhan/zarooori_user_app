<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
      Trust system CAs plus any user-installed CAs on the device.
      This allows the app to work on networks that perform TLS interception
      via a user-installed root certificate, without disabling certificate checks.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>

